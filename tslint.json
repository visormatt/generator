{
  "defaultSeverity": "error",
  "extends": [
    "tslint-react",
    "tslint:recommended",
    "tslint-config-airbnb"
  ],
  "jsRules": {},
  "linterOptions": {
    "exclude": [
      "templates/**/*"
    ]
  },
  "rules": {
    "align": [
      false
    ],
    "import-name": false,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "max-line-length": [
      true,
      {
        "ignore-pattern": "^import ",
        "limit": 80
      }
    ],
    "no-console": false,
    "no-empty-interface": false,
    "no-shadowed-variable": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "variable-name": [
      true,
      "allow-leading-underscore",
      "allow-pascal-case"
    ]
  },
  "rulesDirectory": []
}
